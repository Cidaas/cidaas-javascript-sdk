{
  // Change this to match your project
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    // Generate d.ts files
    "declaration": true,
    // Types should go into this directory.
    // Removing this would place the .d.ts files
    // next to the .js files
    "outDir": "dist",
    // go to js file when using IDE functions like
    // "Go to Definition" in VSCode
    // "declarationMap": true,
    // It will skip the type checking of libraries in the node_modules
    "skipLibCheck": true,
    "noImplicitAny": true,
    "target": "ES2016",
    "module": "ES6",
    "moduleResolution": "node"
  }
}
